<Page x:Class="LinearRegression.App.Views.ComputedAnalysisPages.AverageAndMaximalErrorsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LinearRegression.App.Views.ComputedAnalysisPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AverageAndMaximalErrorsPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="AverageErrorB0Output" FontWeight="Bold">Average Error B0: </TextBlock>
            <TextBlock x:Name="MaximalErrorB0Output" FontWeight="Bold">Maximal Error B0: </TextBlock>
            <TextBlock x:Name="AverageErrorB1Output" Margin="0,10,0,0" FontWeight="Bold">Average Error B1: </TextBlock>
            <TextBlock x:Name="MaximalErrorB1Output" FontWeight="Bold">Maximal Error B1: </TextBlock>
        </StackPanel>
    </Grid>
</Page>
