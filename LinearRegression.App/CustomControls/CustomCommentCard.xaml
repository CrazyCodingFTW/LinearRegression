<UserControl x:Class="LinearRegression.App.CustomControls.CustomCommentCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinearRegression.App.CustomControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <md:Card HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock x:Name="UsernameTextBlock">By: </TextBlock>
                <TextBlock x:Name="ContentTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </md:Card>
    </Grid>
</UserControl>
